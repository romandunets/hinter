<div id="page">
  <div id="navigation">
    <div class="wrapper">
      <div class="container">
        <div id="header" class="pull-left">
          <span>inter</span>
        </div>
        <div class="pull-right">
          <li>
            <%= link_to "LOG IN", login_path %>
          </li>
        </div>
      </div>
    </div>
  </div>

  <div class="container">
    <h1 class="text-center">Sign up</h1>
    <%= form_for(@user, html: { class: "form-horizontal form-narrow" }) do |f| %>
      <%= render 'shared/error_messages' %>
      <fieldset>
        <div class="form-group">
          <%= f.label :email, class: "control-label col-sm-2" %>
          <div class="col-sm-10">
            <%= f.email_field :email, class: "form-control" %>
          </div>
        </div>
      </fieldset>

      <fieldset>
        <div class="form-group">
          <%= f.label :password, class: "control-label col-sm-2" %>
          <div class="col-sm-10">
            <%= f.password_field :password, class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation, "Confirmation", class: "control-label col-sm-2" %>
          <div class="col-sm-10">
            <%= f.password_field :password_confirmation, class: "form-control" %>
          </div>
        </div>
      </fieldset>

      <fieldset class="text-center">
        <%= f.submit "Create account", class: "btn btn-primary" %>
      </fieldset>
    <% end %>
  </div>
</div>