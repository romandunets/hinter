<%= form_for(@user, html: { class: "form-horizontal form-narrow" }) do |f| %>
  <%= render 'shared/error_messages' %>

  <fieldset>
    <div class="form-group">
      <%= f.email_field :email, placeholder: "Email", class: "form-control input-lg" %>
    </div>
  </fieldset>

  <% if @user.new_record? %>
    <fieldset>
      <div class="form-group">
        <%= f.password_field :password, placeholder: "Password", class: "form-control input-lg" %>
      </div>

      <div class="form-group">
        <%= f.password_field :password_confirmation, placeholder: "Password Confirmation", class: "form-control input-lg" %>
      </div>
    </fieldset>
  <% end %>

  <fieldset class="text-center">
    <% if @user.new_record? %>
      <%= f.submit "Create", class: "btn btn-lg btn-primary" %>
    <% else %>
      <%= f.submit "Save", class: "btn btn-lg btn-primary" %>
    <% end %>
  </fieldset>
<% end %>
