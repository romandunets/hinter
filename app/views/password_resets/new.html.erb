<div class="container vertical-center">
  <h1 class="text-center">Reset password</h1>

  <%= form_for(:password_reset, url: password_resets_path, html: { class: "form-horizontal form-narrow" }) do |f| %>
    <fieldset>
      <div class="form-group">
        <%= f.email_field :email, placeholder: "Email", class: "form-control input-lg" %>
      </div>
    </fieldset>

    <fieldset class="text-center">
      <%= f.submit "Reset", class: "btn btn-lg btn-primary" %>
    </fieldset>
  <% end %>
</div>
